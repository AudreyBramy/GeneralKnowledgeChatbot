<chatbot-def start="greeting" bot-prompt="me: " user-prompt="you: ">


  <function name="hello">

def hello(input):
  print("Hi, how are you?")
  return True

  </function>



  <state id="greeting">

    <start>
      <sentence>Hi, what's your question?</sentence>
    </start>  
   
    <input>
      <case type="function" name="hello">
        <sentence delay="1.3">Ok! Let me see...</sentence>
      </case>
    </input>

  </state>


</chatbot-def>
