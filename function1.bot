<chatbot-def start="greeting" bot-prompt="me: " user-prompt="you: ">


  <state id="greeting">

    <start>
      <sentence>Hi, what's your question?</sentence>
    </start>  
   
    <input>
      <case type="pattern" pattern=".*">
        <sentence delay="1.3">Ok! Let me see...</sentence>
      </case>
    </input>

  </state>


</chatbot-def>
